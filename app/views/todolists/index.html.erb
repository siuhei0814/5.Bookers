<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
    <tr>
      <th><span><%= book.title %></span></th>
      <th><span><%= book.body %></span></th>
      <th>
        <span>
          <%= link_to 'Show', todolist_path(book.id) %>
        </span>
      </th>
      <th>
        <span>
          <%= link_to 'Edit', edit_todolist_path(book.id) %>
        </span>
      </th>
    </tr>
    <% end %>
  </tbody>

</table>

<h2>New book</h2>

<%= form_with model: @book, url:'/todolists',local:true do |f| %>

  <p>Title</p>
  <%= f.text_field :title %>
  <p>Body</p>
  <%= f.text_area :body %>

  <br><%= f.submit 'Create Book' %></br>

<% end %>

