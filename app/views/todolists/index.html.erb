<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
    <tr>
      <th><span><%= book.title %></span></th>
      <th><span><%= book.body %></span></th>
      <th>
        <span>
          <%= link_to 'Show', todolist_path(book.id) %>
        </span>
      </th>
      <th>
        <span>
          <%= link_to 'Edit', edit_todolist_path(book.id) %>
        </span>
      </th>
      <th>
        <span>
          <%= link_to 'Destroy', destroy_todolist_path(book.id),method: :delete,"data-confirm" => "本当に削除しますか？" %>
        </span>
      </th>
    </tr>
    <% end %>
  </tbody>

</table>

<h2>New book</h2>

<% if @book.errors.any? %>

  <%if @book.errors.count == 1 %>
    <%= @book.errors.count %> error prohibited this book from being saved:
    <br><% @book.errors.full_messages.each do |message| %></br>
      <%= message %>
    <% end %>

  <% else %>
    <%= @book.errors.count %> errors prohibited this book from being saved:
    <br><% @book.errors.full_messages.each do |message| %></br>
      <%= message %>
    <% end %>
  <% end %>

<% end %>

<%= form_with model: @book, url:'/todolists',local:true do |f| %>

  <p>Title</p>
  <%= f.text_field :title %>
  <p>Body</p>
  <%= f.text_area :body %>

  <br><%= f.submit 'Create Book' %></br>

<% end %>

